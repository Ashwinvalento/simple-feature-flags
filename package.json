{
  "name": "simple-feature-flags",
  "version": "1.0.0",
  "description": "A simple, lightweight, and type-safe feature flags library for JavaScript and React applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ashwinvalento/simple-feature-flags.git"
  },
  "main": "./packages/core/dist/index.js",
  "types": "./packages/core/dist/index.d.ts",
  "exports": {
    "./core": "./packages/core/dist/index.js",
    "./react": "./packages/react/dist/index.js"
  },
  "files": [
    "packages/core/dist",
    "packages/react/dist",
    "packages/core/package.json",
    "packages/react/package.json",
    "packages/core/README.md",
    "packages/react/README.md"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b packages/core packages/react",
    "test": "jest",
    "publish:packages": "npm run build && npm publish --workspace packages/core --workspace packages/react --provenance --access public",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "feature-flags",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^19.2.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
